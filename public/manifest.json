{
  "name": "DLC.Link Bitcoin Wallet Prototype",
  "description": "Accept and broadcast Discreet Log Contracts",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "BTC.png",
    "48": "BTC.png",
    "128": "BTC.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "permissions": ["storage", "management", "declarativeContent"],
  "host_permissions": ["http://localhost:3004/*", "http://50.19.154.13:3004/*", "https://dev-oracle.dlc.link/electrs/*", "https://thriving-starlight-4a7fe8.netlify.app/"],

  "externally_connectable": {
    "matches": [
      "http://localhost:8888/*",
      "https://app.dlc.link/*",
      "*://localhost/*",
      "https://lending.dlc.link/*",
      "https://thriving-starlight-4a7fe8.netlify.app/"
    ]
  },
  "background": {
    "service_worker": "background.js"
  }
}
