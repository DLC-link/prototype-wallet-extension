{
  "name": "DLC Link Extension",
  "description": "Accept and broadcast Discreet Log Contracts",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "DLC.Link_Emoji.png",
    "48": "DLC.Link_Emoji.png",
    "128": "DLC.Link_Emoji.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "permissions": ["storage", "management"],
  "host_permissions": ["http://localhost:3004/*", "http://50.19.154.13:3004/*"],
  "externally_connectable": {
    "matches": ["http://localhost:8888/*", "https://app.dlc.link/*", "*://localhost/*", "https://roaring-kashata-e5d4ba.netlify.app/*"]
  },
  "background": {
    "service_worker": "background.js"
  }
}
